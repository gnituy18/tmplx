<script type="text/tmplx">
  var appName string
  var heading string

  func init() {
    appName = "Tmplx"
    heading = "hello " + appName
  }
</script>

<html>
<head>
  <title> { appName } </title>
</head>

<body>
  <h1> { heading } </h1>

  <input type="text" tx-value="input">
  <button tx-onclick="add()">Add</button>

  <ul>
    <li tx-for="i, item := range list">
      <button tx-onclick="delete(i)">delete</button>
    </li>
  </ul>

  <comp text="appName" />
</body>
</html>
